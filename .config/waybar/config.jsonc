        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [
            "ï‰„ ",
            "ï‰ƒ ",
            "ï‰‚ ",
            "ï‰ ",
            "ï‰€ "
        ]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format": "<span style='italic'>ï‡« </span>",
        "format-wifi": "[<span style='italic'>ï‡« </span> {essid}/{signalStrength}%]",
        // "format-wifi": "[<big>ï‡« </big> {essid}/{signalStrength}%]",
        "format-ethernet": "<span style='italic'>ï– </span> {ipaddr}/{cidr}",
