        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 60,
        // "format-critical": "{temperatureC}Â°C {icon}",
        "format": "[<span style='italic'>{icon}</span>{temperatureC}Â°C]",
        "format-icons": [
            "ï« ",
            "ï‹‰ ",
            "ï© "
