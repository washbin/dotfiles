            "hands-free": "ï–",
            "headset": "ï–",
            "phone": "ï‚• ",
            "portable": "ï‚• ",
            "car": "ï†¹ ",
            "default": [
                "ï€¦",
                "ï€§",
                "ï€¨ "
            ]
