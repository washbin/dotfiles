XF86AudioRaiseVolume
	amixer -c 0 sset Master 1+ unmute

XF86AudioLowerVolume
	amixer -c 0 sset Master 1- unmute

XF86AudioMute
	amixer -q set Master toggle

XF86MonBrightnessUp
	brightnessctl s +5%

XF86MonBrightnessDown
	brightnessctl s 5%-

XF86Audio{Prev,Next}
	mpc -q {prev,next}

XF86AudioPlay
	mpc toggle

/* XF86AudioPause */

Print
	scrot $HOME/Pictures/'shot_%Y_%m_%d_%H_%M_%S.png' && notify-send SCREEN_SHOT


super + Return
	kitty
	/* alacritty */

super + r
	rofi -show drun

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd



###BSPWM hotkeys
# quit/restart bspwm
super + shift + ctrl + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local


###STATE/FLAGS
# set the window state
super + {t,shift + t,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


###FOCUS/SWAP
# focus or send the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {_,shift + } {p,b,comma,period}
	bspc node -{f,s} @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} ^{1-9,10}  --follow


###PRESELECT
# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel


###MOVE/RESIZE
# expand/contract from bottom and right sides
super + shift + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


###GAPS
# Toggle gaps
super + shift + d
	bspc config window_gap {0,8}

# Increase/descrease gap size
super { ,+ shift }+ z
	bspc config window_gap $(($(bspc config window_gap) {+,-} 2))
